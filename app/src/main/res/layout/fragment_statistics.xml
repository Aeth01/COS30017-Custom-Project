<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstrainedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/statsHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/graphics_card_pricing"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statsHeader" />

        <TextView
            android:id="@+id/statsNoCardsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/no_cards_added_label"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/statsLastAddedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/last_added_label"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statsNoCardsLabel" />

        <TextView
            android:id="@+id/statsAveragePriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/average_price_label"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statsLastAddedLabel" />

        <TextView
            android:id="@+id/statsNoCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/textview_default"
            app:layout_constraintBottom_toBottomOf="@+id/statsNoCardsLabel"
            app:layout_constraintStart_toEndOf="@+id/statsNoCardsLabel"
            app:layout_constraintTop_toTopOf="@+id/statsNoCardsLabel" />

        <TextView
            android:id="@+id/statsLastAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_default"
            app:layout_constraintBottom_toBottomOf="@+id/statsLastAddedLabel"
            app:layout_constraintStart_toStartOf="@+id/statsNoCards"
            app:layout_constraintTop_toTopOf="@+id/statsLastAddedLabel" />

        <TextView
            android:id="@+id/statsAveragePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_default"
            app:layout_constraintBottom_toBottomOf="@+id/statsAveragePriceLabel"
            app:layout_constraintStart_toStartOf="@+id/statsNoCards"
            app:layout_constraintTop_toTopOf="@+id/statsAveragePriceLabel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>