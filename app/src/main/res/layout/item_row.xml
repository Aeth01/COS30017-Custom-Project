<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemRowName"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical"
        android:text="@string/textview_default"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/itemRowDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/itemRowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/textview_default"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemRowPriceLabel" />

    <TextView
        android:id="@+id/itemRowPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dollarSymbol"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/itemRowPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemRowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_default"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/itemRowPrice"
        app:layout_constraintTop_toBottomOf="@+id/itemRowPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>